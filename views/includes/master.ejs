<div id="<%= movie.key %>">
    <div>
        <div class="row my-3">
            <div class="col-lg-12">
                <h1>
                    <%= movie.value.Title %>
                </h1>
                <img class="w-100" src="<%= movie.value.Poster %>" alt="movie_poster">
            </div>
            <div class="movie-options col-lg-12" data-key="<%= movie.key %>">
                <div class="my-1">
                    <button class="btn btn-light w-100" type="button" itemprop="details">
                        <i class="fas fa-info-circle"></i>
                        <a href="/movie/<%= movie.key %>">View details</a>
                    </button>
                </div>

                <% if(isEditOn === false){ %>
                    <div class="my-1">
                        <button class="btn btn-light w-100" type="button" itemprop="edit">
                            <i class="fas fa-edit"></i>
                            <a href="/movie/<%= movie.key %>/edit">Edit</a>
                        </button>
                    </div>
                <% } else{ %>
                    <div class="my-1">
                        <button class="btn btn-light w-100" type="submit" form="edit-movie-form">
                            <i class="fas fa-edit"></i>
                            <span>Save</span>
                        </button>
                    </div>
                <% } %>

                <div class="my-1">
                    <button class="btn btn-light w-100" type="button" itemprop="delete">
                        <i class="fas fa-trash-alt"></i>
                        <a href="/movie/<%= movie.key %>/delete">Delete</a>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
